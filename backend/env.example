# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these variables in your hosting platform (e.g., Render)

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/cobuilder

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cloudinary Configuration (for profile pictures)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CORS Configuration
# Add your frontend URLs here (comma-separated)
FRONTEND_URLS=http://localhost:5173,http://localhost:5174

# For production, add your deployed frontend URL
# FRONTEND_URLS=https://your-frontend-app.onrender.com

# Rate Limiting (optional - defaults are used if not set)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100 